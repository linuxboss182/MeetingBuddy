<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wpi.meetingbuddy.meetingbuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".MainActivity">

        </activity>

        <!-- UserLoginActivity -->
        <activity android:name=".UserLoginActivity"></activity>

        <!-- CreateAccountActivity -->
        <activity android:name=".CreateAccountActivity">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />

            </intent-filter>
        </activity>

        <!-- MyMeetingActivity -->
        <activity android:name=".MyMeetingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CreateMeetingActivity -->
        <activity
            android:name=".CreateMeetingActivity"
            android:label="@string/title_activity_create_meeting"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wpi.meetingbuddy.meetingbuddy.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PeopleSearchActivity"
            android:label="@string/title_activity_people_search"
            android:parentActivityName=".CreateMeetingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wpi.meetingbuddy.meetingbuddy.CreateMeetingActivity" />
        </activity>

        <activity
            android:name=".LocationSelectorActivity"
            android:label="Select Meeting Location"
            android:parentActivityName=".CreateMeetingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wpi.meetingbuddy.meetingbuddy.CreateMeetingActivity" />
        </activity>

        <!-- StudentMeetingActivity -->
        <activity android:name=".StudentMeetingActivity">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>